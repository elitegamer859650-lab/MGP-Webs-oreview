<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MGP LABS - Innovating Tomorrow's Solutions</title>
    <!-- Load Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Load Inter font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;800&display=swap" rel="stylesheet">
    <style>
        /* Apply the Inter font */
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 font-sans">

    <!-- Navigation Bar -->
    <nav class="bg-white shadow-sm sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <div class="flex-shrink-0 flex items-center">
                        <span class="text-2xl font-bold text-blue-600">MGP LABS</span>
                    </div>
                </div>
                
                <!-- Desktop Navigation -->
                <div class="hidden md:flex items-center space-x-8">
                    <a href="#home" class="text-gray-700 hover:text-blue-600 font-medium transition-colors">Home</a>
                    <a href="#projects" class="text-gray-700 hover:text-blue-600 font-medium transition-colors">Projects</a>
                </div>
                
                <!-- Mobile menu button -->
                <div class="md:hidden flex items-center">
                    <button
                        id="mobile-menu-button"
                        onclick="toggleMenu()"
                        class="inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-blue-600 focus:outline-none"
                    >
                        <!-- Menu Icon (lucide-react) -->
                        <svg id="menu-icon" class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <line x1="4" x2="20" y1="12" y2="12"></line>
                            <line x1="4" x2="20" y1="6" y2="6"></line>
                            <line x1="4" x2="20" y1="18" y2="18"></line>
                        </svg>
                        <!-- X Icon (lucide-react) -->
                        <svg id="x-icon" class="h-6 w-6 hidden" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M18 6 6 18"></path>
                            <path d="m6 6 12 12"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="md:hidden hidden">
            <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white shadow-lg">
                <a href="#home" class="flex items-center px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-blue-600 hover:bg-gray-50" onclick="toggleMenu()">
                    <!-- Home Icon (lucide-react) -->
                    <svg class="mr-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                        <polyline points="9 22 9 12 15 12 15 22"></polyline>
                    </svg>
                    Home
                </a>
                <a href="#projects" class="flex items-center px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-blue-600 hover:bg-gray-50" onclick="toggleMenu()">
                    <!-- Folder Icon (lucide-react) -->
                    <svg class="mr-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M20 20a2 2 0 0 0 2-2V8a2 2 0 0 0-2-2h-7.9a2 2 0 0 1-1.69-.9L9.6 3.9A2 2 0 0 0 7.93 3H4a2 2 0 0 0-2 2v13a2 2 0 0 0 2 2Z"></path>
                    </svg>
                    Projects
                </a>
            </div>
        </div>
    </nav>

    <!-- Hero Section with Banner -->
    <section id="home" class="relative py-16 md:py-24">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                <!-- Text Content -->
                <div class="order-2 lg:order-1">
                    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight mb-6">
                        Innovating Tomorrow's <span class="text-blue-600">Solutions</span>
                    </h1>
                    <p class="text-xl text-gray-600 mb-8 max-w-2xl">
                        We create cutting-edge technology solutions that transform industries and empower businesses to reach new heights.
                    </p>
                    <div class="flex flex-wrap gap-4">
                        <a 
                            href="#projects" 
                            class="px-8 py-4 bg-blue-600 text-white font-medium rounded-lg shadow-lg hover:bg-blue-700 transition-colors duration-300 transform hover:-translate-y-1"
                        >
                            View Our Projects
                        </a>
                        <a 
                            href="#projects" 
                            class="px-8 py-4 bg-white text-blue-600 border border-blue-600 font-medium rounded-lg shadow-lg hover:bg-blue-50 transition-colors duration-300"
                        >
                            Learn More
                        </a>
                    </div>
                </div>
                
                <!-- Banner Image -->
                <div class="order-1 lg:order-2 relative">
                    <div class="relative rounded-2xl overflow-hidden shadow-2xl">
                        <div class="bg-gradient-to-r from-blue-500 to-indigo-600 w-full h-80 md:h-96 rounded-2xl flex items-center justify-center">
                            <div class="text-center p-6">
                                <div class="text-white text-4xl font-bold mb-4">MGP LABS</div>
                                <div class="text-blue-100 text-xl">Innovation & Technology</div>
                            </div>
                        </div>
                        
                        <!-- Decorative elements -->
                        <div class="absolute -bottom-6 -left-6 w-32 h-32 bg-yellow-400 rounded-full opacity-20"></div>
                        <div class="absolute -top-6 -right-6 w-24 h-24 bg-blue-400 rounded-full opacity-20"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-900">Our Projects</h2>
                <p class="mt-4 text-xl text-gray-600 max-w-3xl mx-auto">
                    Discover our latest innovations and technological breakthroughs
                </p>
            </div>
            
            <!-- Grid where projects will be injected by JavaScript -->
            <div id="projects-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Project cards will be rendered here -->
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <p class="text-lg">Powered by <span class="font-bold text-blue-400">MGP Labs</span></p>
                <!-- Current year will be injected by JavaScript -->
                <p class="mt-2 text-gray-400">Â© <span id="current-year"></span> All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script>
        // --- Mobile Menu Toggle ---
        function toggleMenu() {
            const menu = document.getElementById('mobile-menu');
            const menuIcon = document.getElementById('menu-icon');
            const xIcon = document.getElementById('x-icon');
            
            menu.classList.toggle('hidden');
            menuIcon.classList.toggle('hidden');
            xIcon.classList.toggle('hidden');
        }

        // --- Project Data ---
        const projects = [
            {
                id: 1,
                title: "AI-Powered Analytics Platform",
                description: "Advanced data visualization and predictive analytics solution for enterprise clients.",
                tags: ["AI", "Data Science", "Cloud"]
            },
            {
                id: 2,
                title: "Blockchain Identity Verification",
                description: "Secure decentralized identity management system for financial institutions.",
                tags: ["Blockchain", "Security", "Fintech"]
            },
            {
                id: 3,
                title: "IoT Smart City Solutions",
                description: "Integrated urban management platform connecting sensors and city infrastructure.",
                tags: ["IoT", "Smart Cities", "Infrastructure"]
            }
        ];

        // --- Render Projects ---
        function renderProjects() {
            const projectsGrid = document.getElementById('projects-grid');
            let projectsHTML = '';

            projects.forEach(project => {
                // Create tags HTML
                let tagsHTML = '';
                project.tags.forEach(tag => {
                    tagsHTML += `
                        <span class="px-3 py-1 bg-blue-100 text-blue-800 text-sm font-medium rounded-full">
                            ${tag}
                        </span>
                    `;
                });

                // Create project card HTML
                projectsHTML += `
                    <div class="bg-gray-50 rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 border border-gray-100 hover:-translate-y-1">
                        <div class="p-6">
                            <div class="bg-gradient-to-r from-blue-400 to-indigo-500 rounded-xl w-full h-48 mb-6 flex items-center justify-center">
                                <div class="text-white text-xl font-bold">Project Preview</div>
                            </div>
                            <h3 class="text-xl font-bold text-gray-900 mb-3">${project.title}</h3>
                            <p class="text-gray-600 mb-4">${project.description}</p>
                            <div class="flex flex-wrap gap-2 mb-6">
                                ${tagsHTML}
                            </div>
                            <div class="grid grid-cols-2 gap-3">
                                <button class="py-2 bg-white border border-blue-600 text-blue-600 font-medium rounded-lg hover:bg-blue-50 transition-colors">
                                    Details
                                </button>
                                <button class="py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors">
                                    Visit
                                </button>
                            </div>
                        </div>
                    </div>
                `;
            });

            // Inject the generated HTML into the grid
            projectsGrid.innerHTML = projectsHTML;
        }

        // --- Set Current Year in Footer ---
        function setFooterYear() {
            const yearSpan = document.getElementById('current-year');
            yearSpan.textContent = new Date().getFullYear();
        }

        // --- Run scripts on page load ---
        document.addEventListener('DOMContentLoaded', () => {
            renderProjects();
            setFooterYear();
        });

    </script>
</body>
</html>
