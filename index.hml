<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MGP Labs Showcase</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              indigo: {
                700: '#4338ca',
                600: '#4f46e5',
              },
              blue: {
                600: '#2563eb',
                100: '#dbeafe',
                800: '#1e40af',
              },
              green: {
                100: '#dcfce7',
                800: '#166534',
              },
              yellow: {
                100: '#fef9c3',
                800: '#854d0e',
              },
              gray: {
                50: '#f9fafb',
                100: '#f3f4f6',
                200: '#e5e7eb',
                600: '#4b5563',
                700: '#374151',
                800: '#1f2937',
                900: '#111827',
              },
            }
          }
        }
      }
    </script>
</head>
<body class="bg-gray-50">

    <div class="min-h-screen bg-gradient-to-b from-gray-50 to-gray-100">
      <!-- Header -->
      <header class="border-b border-gray-200 bg-white/80 backdrop-blur-sm sticky top-0 z-10">
        <div class="container mx-auto px-4 py-6 flex flex-col md:flex-row items-center justify-between">
          <div class="flex items-center space-x-3 mb-4 md:mb-0">
            <div class="bg-gray-200 border-2 border-dashed rounded-xl w-16 h-16"></div>
            <div>
              <h1 class="text-2xl font-bold text-gray-900">MGP LABS</h1>
              <p class="text-sm text-gray-600">Innovating Tomorrow's Technology</p>
            </div>
          </div>
          
          <div class="flex space-x-3">
            <button class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Contact</button>
            <button class="px-4 py-2 text-sm font-medium text-white bg-gray-800 border border-transparent rounded-md hover:bg-gray-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900">About</button>
          </div>
        </div>
      </header>

      <!-- Hero Section -->
      <section class="py-16 md:py-24 bg-gradient-to-r from-blue-600 to-indigo-700 text-white">
        <div class="container mx-auto px-4 text-center">
          <h1 class="text-4xl md:text-6xl font-bold mb-6">Transforming Ideas Into Reality</h1>
          <p class="text-xl md:text-2xl max-w-3xl mx-auto mb-10 text-blue-100">
            We build cutting-edge solutions at the intersection of technology and human experience
          </p>
          <button 
            class="inline-flex items-center justify-center bg-white text-indigo-700 hover:bg-gray-100 font-semibold py-4 px-8 text-lg rounded-md"
          >
            Explore Our Projects
            <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
      </section>

      <!-- Projects Section -->
      <section class="py-16 bg-white">
        <div class="container mx-auto px-4">
          <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Our Projects</h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
              Discover our portfolio of innovative solutions across multiple technology domains
            </p>
          </div>

          <div id="projects-container" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Project cards will be injected here by JavaScript -->
          </div>
        </div>
      </section>

      <!-- CTA Section -->
      <section class="py-16 bg-gray-50">
        <div class="container mx-auto px-4 text-center">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">Ready to Start Your Project?</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-10">
            Let's collaborate to bring your innovative ideas to life
          </p>
          <button class="bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-4 px-8 text-lg rounded-md">
            Get in Touch
          </button>
        </div>
      </section>

      <!-- Footer -->
      <footer class="border-t border-gray-200 bg-white py-8">
        <div class="container mx-auto px-4 text-center">
          <p class="text-gray-600">powered by <span class="font-semibold text-indigo-600">MGP LABS</span></p>
          <p id="footer-year" class="text-sm text-gray-500 mt-2"></p>
        </div>
      </footer>
    </div>

    <script>
      const projects = [
        {
          id: 1,
          title: "AI-Powered Analytics Dashboard",
          description: "Real-time data visualization platform with predictive analytics capabilities for enterprise clients.",
          category: "Data Science",
          status: "completed"
        },
        {
          id: 2,
          title: "Blockchain Identity Verification",
          description: "Decentralized identity management system for secure digital authentication.",
          category: "Blockchain",
          status: "in-progress"
        },
        {
          id: 3,
          title: "IoT Smart City Solutions",
          description: "Connected infrastructure management for urban environments with real-time monitoring.",
          category: "IoT",
          status: "completed"
        },
        {
          id: 4,
          title: "AR Navigation System",
          description: "Augmented reality wayfinding application for complex indoor environments.",
          category: "AR/VR",
          status: "upcoming"
        },
        {
          id: 5,
          title: "Quantum Computing Simulator",
          description: "Educational platform for quantum algorithm development and testing.",
          category: "Quantum",
          status: "in-progress"
        },
        {
          id: 6,
          title: "Sustainable Energy Management",
          description: "AI-driven optimization platform for renewable energy distribution networks.",
          category: "Green Tech",
          status: "completed"
        }
      ];

      const getStatusColor = (status) => {
        switch (status) {
          case "completed": return "bg-green-100 text-green-800";
          case "in-progress": return "bg-blue-100 text-blue-800";
          case "upcoming": return "bg-yellow-100 text-yellow-800";
          default: return "bg-gray-100 text-gray-800";
        }
      };

      const projectsContainer = document.getElementById('projects-container');

      projects.forEach(project => {
        const card = document.createElement('div');
        card.className = "flex flex-col border border-gray-200 rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow";
        card.innerHTML = `
          <div class="p-6 pb-4">
            <div class="flex justify-between items-start">
              <h3 class="text-xl font-bold text-gray-900">${project.title}</h3>
              <span class="text-xs font-semibold px-2.5 py-0.5 rounded-full ${getStatusColor(project.status)}">
                ${project.status.replace('-', ' ')}
              </span>
            </div>
            <p class="text-sm text-gray-600">${project.category}</p>
          </div>
          <div class="p-6 pt-0 flex-grow pb-4">
            <p class="text-gray-700">${project.description}</p>
          </div>
          <div class="p-6 pt-0">
            <button class="w-full inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
              View Project
              <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </button>
          </div>
        `;
        projectsContainer.appendChild(card);
      });

      document.getElementById('footer-year').textContent = `Â© ${new Date().getFullYear()} All rights reserved`;
    </script>
</body>
</html>
